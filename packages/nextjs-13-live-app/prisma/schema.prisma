generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  vote      Pokemon  @relation(name: "votesFor", fields: [voteId], references: [id])
  voteId    Int

  @@map("Votes")
}

model Pokemon {
  id        Int    @id
  name      String
  spriteUrl String
  votes     Vote[] @relation("votesFor")

  @@map("Pokemons")
}
